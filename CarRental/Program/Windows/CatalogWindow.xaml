<Window x:Class="Program.CatalogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Program"
        mc:Ignorable="d"
        Title="CatalogWindow" Height="300" Width="330" Loaded="Window_Loaded" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen" Icon="/CarRental;component/Resources/Graphicloads-Colorful-Long-Shadow-Car.ico">
    <Grid>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="22" Margin="20,30,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="185" FontSize="14"/>
        <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" Margin="20,80,0,0" VerticalAlignment="Top" Height="150" Width="185" FontSize="14"/>
        <Button x:Name="AddButton" Content="Додати" HorizontalAlignment="Left" Margin="229,30,-12,0" VerticalAlignment="Top" Width="75" Click="AddButton_Click" Height="22" FontSize="14"/>
        <Button x:Name="DelButton" Content="Видалити" HorizontalAlignment="Left" Margin="229,80,-12,0" VerticalAlignment="Top" Width="75" Click="DelButton_Click" Height="22" FontSize="14"/>

    </Grid>
</Window>
